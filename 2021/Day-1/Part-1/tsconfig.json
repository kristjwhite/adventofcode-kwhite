{
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "target": "es2019",
    "module": "commonjs",
    "isolatedModules": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "declaration": true,
    "types": ["vitest/globals"]
  }
}
